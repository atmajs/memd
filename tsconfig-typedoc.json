{
    "include": ["src/**/*"],
    "exclude": ["node_modules", "ts-temp", "lib", "test", "typings"],
    "compilerOptions": {
        "lib": ["es2015", "es2015.promise", "es2016", "dom"],

        "declaration": true,
        "target": "es2020",
        "module": "commonjs",
        "sourceMap": false,
        "experimentalDecorators": true
    },
    "typedocOptions": {
        "name": "",
        "entryPoints": [
            "./src/export.ts"
        ],
        "out": "docs"
    }
}
