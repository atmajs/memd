{
    "name": "memd",
    "description": "Cache data and memoize, debounce, throttle and queue methods",
    "author": {
        "name": "Alexander Kit",
        "email": "alex.kit@atmajs.com"
    },
    "version": "0.3.16",
    "main": "./lib/umd/memd.js",
    "types": "./lib/memd.d.ts",
    "exports": {
        ".": {
            "types": "./lib/memd.d.ts",
            "import": "./lib/esm/memd.mjs",
            "require": "./lib/umd/memd.js"
        }
    },
    "keywords": [
        "memoize",
        "cache",
        "debounce",
        "throttle"
    ],
    "repository": {
        "type": "git",
        "url": "git://github.com/atmajs/memd.git"
    },
    "devDependencies": {
        "@types/node": "^12.12.6",
        "@types/sinon": "^2.3.3",
        "app-bundler": "^0.2.6",
        "atma": "^0.15.23",
        "atma-io": "^1.3.5",
        "atma-io-middleware-condcomments": "^1.2.8",
        "atma-loader-ts": "^1.2.7",
        "atma-utils": "^0.2.63",
        "dts-bundle": "^0.7.3",
        "typedoc": "^0.26.2",
        "typescript": "^5.5.2"
    },
    "scripts": {
        "test": "atma test",
        "build": "npm run build-bundle && npm run build-dts && npm run build-typedoc",
        "build-bundle": "app-bundler",
        "build-dts": "tsc -p tsconfig-build.json && atma run tools/build-dts",
        "build-typedoc": "typedoc --tsconfig ./tsconfig-typedoc.json && atma task copy",
        "watch": "app-bundler --watch",
        "server": "atma server",
        "release": "echo \"Run atma pub -m \"message\"\""
    },
    "license": "MIT",
    "app-bundler": {
        "apps": {
            "umd": {
                "outputMain": "lib/umd/memd.js",
                "package": {
                    "module": "commonjs",
                    "moduleName": "memd",
                    "moduleWrapper": "umd",
                    "commonjs": {
                        "output": "simplified"
                    }
                },
                "settings": {
                    "atma-io-middleware-condcomments": {
                        "defines": {
                            "CJS": true,
                            "ESM": false
                        }
                    }
                }
            },
            "esm": {
                "outputMain": "lib/esm/memd.mjs",
                "package": {
                    "module": "commonjs",
                    "moduleName": "memd",
                    "moduleWrapper": "esm",
                    "commonjs": {
                        "output": "simplified"
                    }
                },
                "settings": {
                    "atma-io-middleware-condcomments": {
                        "defines": {
                            "CJS": false,
                            "ESM": true
                        }
                    }
                },
                "postbuild": [ "npx atma run ./tools/import.ts" ]
            }
        },
        "common": {
            "file": "src/export.ts",
            "extensions": {
                "io": {
                    "type": "js"
                }
            },
            "defaultExtensions": {
                "js": "ts"
            },
            "middlewares": {
                "ts": [
                    "atma-io-middleware-condcomments:read",
                    "atma-loader-ts:read"
                ]
            },
            "settings": {
                "atma-loader-ts": {
                    "typescript": {
                        "compilerOptions": {
                            "target": "es2022",
                            "module": "CommonJS"
                        }
                    }
                }
            }
        }
    },
    "atma": {
        "plugins": [
            "atma-io-middleware-condcomments",
            "atma-loader-ts"
        ],
        "settings": {
            "io": {
                "extensions": {
                    "ts": [
                        "atma-io-middleware-condcomments:read",
                        "atma-loader-ts:read"
                    ]
                }
            },
            "include": {
                "amd": true,
                "extentionDefault": {
                    "js": "ts"
                }
            },
            "atma-loader-ts": {
                "extensions": [
                    "test",
                    "ts"
                ],
                "typescript": {
                    "compilerOptions": {
                        "#if (TEST)": {
                            "module": "AMD",
                            "target": "es2020"
                        }
                    }
                }
            }
        },
        "tasks": {
            "copy": {
                "files": {
                    "./assets/background.jpg": "./docs/assets/background.jpg"
                }
            }
        }
    }
}
