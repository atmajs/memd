{
    "name": "memd",
    "description": "Cache data and also memoize, debounce, throttle and queue methods",
    "author": {
        "name": "Alexander Kit",
        "email": "alex.kit@atmajs.com"
    },
    "version": "0.3.5",
    "main": "./lib/memd.js",
    "types": "./lib/memd.d.ts",
    "repository": {
        "type": "git",
        "url": "git://github.com/atmajs/memd.git"
    },
    "devDependencies": {
        "@types/node": "^12.12.6",
        "@types/sinon": "^2.3.3",
        "app-bundler": "0.0.83",
        "atma": "^0.12.18",
        "atma-io": "^1.2.39",
        "atma-loader-ts": "^1.1.11",
        "atma-utils": "^0.2.49",
        "dts-bundle": "^0.7.3"
    },
    "scripts": {
        "test": "atma test",
        "build": "npm run build-bundle && npm run build-dts && npm run build-typedoc",
        "build-bundle": "app-bundler",
        "build-dts": "tsc -p tsconfig-build.json && atma run tools/build-dts",
        "build-typedoc": "typedoc --tsconfig ./tsconfig-typedoc.json && atma task copy",

        "watch": "app-bundler --watch",
        "server": "atma server",
        "release": "echo \"Run atma pub -m \"message\"\""
    },
    "license": "MIT",
    "app-bundler": {
        "file": "src/export.ts",
        "outputMain": "lib/memd.js",
        "package": {
            "module": "commonjs",
            "moduleName": "memd",
            "moduleWrapper": "umd",
            "commonjs": {
                "output": "simplified"
            }
        },
        "extensions": {
            "io": {
                "type": "js"
            }
        },
        "defaultExtensions": {
            "js": "ts"
        },
        "middlewares": {
            "ts": [
                "atma-loader-ts:read"
            ]
        }
    },
    "atma": {
        "plugins": [
            "atma-loader-ts"
        ],
        "settings": {
            "include": {
                "amd": true,
                "extentionDefault": {
                    "js": "ts"
                }
            },
            "atma-loader-ts": {
                "extensions": [
                    "test",
                    "ts"
                ],
                "typescript": {
                    "compilerOptions": {
                        "#if (TEST)": {
                            "module": "AMD",
                            "target": "es2020"
                        }
                    }
                }
            }
        },
        "tasks": {
            "copy": {
                "files": {
                    "./assets/background.jpg": "./docs/assets/background.jpg"
                }
            }
        }
    },
    "dependencies": {
        "typedoc": "^0.21.6"
    }
}
